<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SimpleServlet</servlet-name>
        <servlet-class>myServlets.SimpleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NamedHelloWorld</servlet-name>
        <servlet-class>myServlets.NamedHelloWorld</servlet-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>Bob</param-value>
        </init-param>
        <init-param>
            <param-name>phone</param-name>
            <param-value>087-01020304</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>FullNameServlet</servlet-name>
        <servlet-class>myServlets.FullNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NumberServlet</servlet-name>
        <servlet-class>myServlets.NumberServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleServlet</servlet-name>
        <url-pattern>/SimpleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NamedHelloWorld</servlet-name>
        <url-pattern>/NamedHelloWorld</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FullNameServlet</servlet-name>
        <url-pattern>/FullNameServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NumberServlet</servlet-name>
        <url-pattern>/NumberServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
